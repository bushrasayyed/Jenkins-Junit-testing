pipeline{
    agent any
    stages
    {
        stage('Build')
        {
            steps{
                sh 'mvn -B -DskipTest clean package '
            }
        }
        stage('Testing')
        {
            steps{
            sh 'mvn test'
            
            }
            post{
                always{
                    junit 'target/surefire-reports/*.xml'
                    sh 'junit-viewer --results=target/surefire-reports --save=report.html'
                }
            }
        }

    }
}